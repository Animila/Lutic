<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SettingsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_settings"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/primaryColor">

        <androidx.appcompat.widget.Toolbar
            android:padding="0dp"
            android:id="@+id/toolbar_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/close_settings_tw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="Закрыть"
                    android:textColor="@color/black"
                    android:textSize="17dp"

                    />

                <TextView
                    android:id="@+id/save_settings_tw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="20dp"
                    android:text="Сохранить"
                    android:textColor="@color/black"
                    android:textSize="17dp" />
            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/settings_account_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/app_bar_settings"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:src="@drawable/account_image" />


    <EditText
        android:id="@+id/settings_account_name"
        android:layout_width="368dp"
        android:layout_height="48dp"
        android:layout_below="@id/settings_account_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="@drawable/input"
        android:hint="Ваше имя"
        android:paddingLeft="15dp"
        android:textColor="@color/black"
        android:textColorHint="#959595" />


    <EditText
        android:id="@+id/settings_account_number"
        android:layout_width="368dp"
        android:layout_height="48dp"
        android:layout_below="@id/settings_account_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="@drawable/input"
        android:hint="Ваш телефон"
        android:inputType="phone"
        android:paddingLeft="15dp"
        android:textColor="@color/black"
        android:textColorHint="#959595" />

    <EditText
        android:id="@+id/settings_account_address"
        android:layout_width="368dp"
        android:layout_height="48dp"
        android:layout_below="@id/settings_account_number"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="@drawable/input"
        android:hint="Ваш адрес"
        android:paddingLeft="15dp"
        android:textColor="@color/black"
        android:textColorHint="#959595" />

</RelativeLayout>